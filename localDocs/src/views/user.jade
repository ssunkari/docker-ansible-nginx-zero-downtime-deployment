          script.
            $(document).ready(function() {
                $("a.fa.fa-edit.phone").click(function(event) {
                var grandParent = $(this).parent().parent();
                $(this).parent().parent().children().remove();
                $(grandParent).append('<div class="col-lg-6"><label>Phone No </label></div>'+
                '<div class="col-lg-6"><input type="text" name="phone"/></div>');
                });
                $("a.fa.fa-edit.friendlyName").click(function(event) {
                var grandParent = $(this).parent().parent();
                $(this).parent().parent().children().remove();
                $(grandParent).append('<div class="col-lg-6"><label>Your Name:</label></div>'+
                '<div class="col-lg-6"><input type="text" name="friendlyName"/></div>');
                });
            });
