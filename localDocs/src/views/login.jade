extends plain_layout

block content
  .container
    .row
    .col-md-4.col-md-offset-4
        .login-panel.panel.panel-default
          .panel-heading
            h3.panel-title Ahoy hoy!
          |                     
          .panel-body
            form(role='form',action="/",method="post")
              fieldset
                .form-group
                  input.form-control(placeholder='username', name='username', type='username', autofocus='',required='')
                |                                 
                .form-group
                  input.form-control(placeholder='Password', name='password', type='password', required='')
                |                                 
                .checkbox
                  label
                    input(name='remember', type='checkbox', value='Remember Me')
                    | Remember Me
                // Change this to a button or input when using this as a form
                button.btn.btn-lg.btn-success.btn-block(type='submit') Login
                a.btn.btn-lg.btn-success.btn-block(href='/PasswordRecovery') Forgot Password
                a.btn.btn-lg.btn-success.btn-block(href='/Signup') Lets Get Setup
            p= errMsg
            if notActivated
              p User not activated 
                a(href="/signup/resend/email?uid=#{username}") click here 
                | to resend the activation link 
           
  script(src='/dist/js/metisMenu.min.js')
  script(src='/javascripts/bootstrap.min.js')
