extends layout

block content
  .container
    .row
    .col-md-4.col-md-offset-4
        .login-panel.panel.panel-default
          .panel-heading
            h3.panel-title Divider welcomes you
          |                     
          .panel-body
            form(role='form',action="/passwordReset/#{uid}",method="post")
              fieldset               
                .form-group
                  input.form-control(placeholder='New Password', name='password', type='password', required='')
                |  
                // Change this to a button or input when using this as a form
                button.btn.btn-lg.btn-success.btn-block(type='submit') Recover
            if success
              p Password reset successfully 
                a(href="/") click here 
                | to login
            else 
              p= message
           
  script(src='/dist/js/metisMenu.min.js')
  script(src='/javascripts/bootstrap.min.js')
